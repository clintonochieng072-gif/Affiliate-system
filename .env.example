# Neon PostgreSQL Database
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/database?sslmode=require

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Webhook Configuration (for payment system)
WEBHOOK_SECRET=your_webhook_secret_key

# Paystack Configuration (for payouts)
PAYSTACK_SECRET_KEY=your_paystack_secret_key

# Daraja Configuration (for Sales Agent withdrawals)
# NOTE: Keep DARAJA_ENV=sandbox for testing. Switch to "live" with live creds later (no code changes needed).
DARAJA_ENV=sandbox

# Sandbox credentials
DARAJA_CONSUMER_KEY_SANDBOX=your_sandbox_consumer_key
DARAJA_CONSUMER_SECRET_SANDBOX=your_sandbox_consumer_secret
DARAJA_SHORTCODE_SANDBOX=your_sandbox_shortcode
DARAJA_INITIATOR_NAME_SANDBOX=testapi
DARAJA_SECURITY_CREDENTIAL_SANDBOX=your_sandbox_security_credential
DARAJA_INITIATOR_PASSWORD_SANDBOX=
DARAJA_PUBLIC_CERTIFICATE_SANDBOX=
DARAJA_COMMAND_ID_SANDBOX=BusinessPayment

# Live credentials (set when moving to production)
DARAJA_CONSUMER_KEY_LIVE=
DARAJA_CONSUMER_SECRET_LIVE=
DARAJA_SHORTCODE_LIVE=
DARAJA_INITIATOR_NAME_LIVE=
DARAJA_SECURITY_CREDENTIAL_LIVE=
DARAJA_INITIATOR_PASSWORD_LIVE=
DARAJA_PUBLIC_CERTIFICATE_LIVE=
DARAJA_COMMAND_ID_LIVE=BusinessPayment

# Callback configuration
# If omitted, callbacks default to NEXTAUTH_URL + /api/webhooks/daraja/*
DARAJA_CALLBACK_BASE_URL=http://localhost:3000
DARAJA_RESULT_URL_SANDBOX=
DARAJA_TIMEOUT_URL_SANDBOX=
DARAJA_RESULT_URL_LIVE=
DARAJA_TIMEOUT_URL_LIVE=

# Optional aliases for legacy misspelling compatibility (DARARA_*)
DARARA_CONSUMER_KEY_SANDBOX=
DARARA_CONSUMER_SECRET_SANDBOX=
DARARA_SHORTCODE_SANDBOX=
DARARA_INITIATOR_NAME_SANDBOX=
DARARA_SECURITY_CREDENTIAL_SANDBOX=

# Target Product URL (where referrals are redirected)
TARGET_PRODUCT_URL=https://your-product-url.com
